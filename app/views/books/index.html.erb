<h1>Homepage</h1>

<%= link_to 'Add Book', new_book_path %>


<h2>Listing Books</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Description</th>
    <th>URL</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.description %></td>
      <td><%= book.URL %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book),
            method: :delete,
            data: { confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>
