<%= form_for([@book]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :URL %><br>
    <%= f.text_field :URL %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
